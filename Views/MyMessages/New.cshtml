@model MyMessagesViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 style="font:400 1.5em;color:black">Get in touch</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="js-tilt">
                    <img src="~/images/contact/mail.png" alt="Alternate Text" />
                </div>
            </div>
            <div class="col-lg-6">
                <form asp-controller="" asp-action="Create" method="post" id="signupform">
                    <input asp-for="Id" type="hidden" />
                    @Html.ValidationSummary(true, "Please fix the following errors")
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control" asp-for="Message"></textarea>
                    </div>
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success btn-lg">Send Message</button>
                </form>
            </div><!--col-lg-12-->
        </div><!--row-->
    </div><!--container-->
</section>
@section scripts {
    <script src="~/lib/js/mymessage.js"></script>
}

